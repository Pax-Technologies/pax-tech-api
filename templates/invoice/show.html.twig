{#                                        {{ invoice.client.billingAddress.postalCode }}#}
{#                                    </div>#}
{#                                    <div class="col-5">#}
{#                                        {{ invoice.client.billingAddress.city }}#}
{#                                    </div>#}
{#                                    <div class="col-4">#}
{#                                        {{ invoice.client.billingAddress.country }}#}
{#                                    </div>#}
{#                                </div>#}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h4 class="text-white-50">Détails de la facture</h4>
                        <table class="table" id="invoice-details">
                            <thead>
                            <tr>
                                <th class="col-4 text-white-50">Description</th>
                                <th class="col-2 text-white-50">Prix unitaire</th>
                                <th class="col-1 text-white-50">Quantité</th>
                                <th class="col-2 text-white-50">Total HTVA</th>
                                <th class="col-1 text-white-50">TVA (%)</th>
                                <th class="col-2 text-white-50">Total TVAC</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for detailForm in invoice.invoiceDetails %}
                                <tr>
                                <td class="text-white">{{ detailForm.description }}</td class="text-white">
                                <td class="text-white">{{ detailForm.unitPriceExcl }}</td class="text-white">
                                <td class="text-white">{{ detailForm.quantity }}</td class="text-white">
                                <td class="text-white">{{ detailForm.totalExcl }}</td class="text-white">
                                <td class="text-white">{{ detailForm.vatRate }}</td class="text-white">
                                <td class="text-white">{{ detailForm.totalIncl }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer d-flex flex-column align-items-end pt-5">
                        <h6 class="mb-2">Total HTVA: <strong>{{ invoice.totalAmountNet|number_format(2, '.', ',') }}€</strong></h6>
                        <h6 class="mb-2">Total TVA: <strong>{{ invoice.totalVatAmount|number_format(2, '.', ',') }}€</strong></h6>
                        <div class="mt-3 mb-2">
                            <h4 class="">Total TVAC: <strong>{{ invoice.totalAmountGross|number_format(2, '.', ',') }}€</strong></h4>
                        </div>
                    </div>
                </div>

            </div>

        </div>
